name = Converge
description = An ultimate and attractive powerful fixed/fluid width layout theme. Its based on 16 Column grid providing awesome flexibilty and theme settings.
screenshot = screenshot.png
base theme = fusion_core
core = 6.x
engine = phptemplate

stylesheets[all][] = css/advanced-typography.css
stylesheets[all][] = css/converge.css

; Calling form validation script used in footer contact form
scripts[] = js/jquery.validate.js
scripts[] = js/jquery.overlabel.js

; Calling script for piecemaker slider
scripts[] = piecemaker/js/swfobject.js

; Calling some custom ui script
scripts[] = js/equalheights.js
scripts[] = js/converge.js

regions[sidebar_first] = sidebar first
regions[sidebar_last] = sidebar last
regions[header_top] = header top
regions[navigation_bar] = navigation bar
regions[preface_upper_top] = preface upper top 1
regions[preface_upper_top1] = preface upper top 2
regions[preface_top] = preface top
regions[preface_bottom] = preface bottom
regions[content_top] = content top
regions[content] = content
regions[content_bottom] = content bottom
regions[postscript_top] = postscript top
regions[postscript_bottom] = postscript bottom
regions[footer] = footer one
regions[footer_two] = footer two
regions[node_top] = node top
regions[node_bottom] = node bottom

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

; Default theme settings
settings[theme_grid] = grid12-960
settings[theme_grid_options][] = grid12-960
settings[theme_grid_options][] = grid12-fluid
settings[header_top_region] = collpasible-header-top
settings[fluid_grid_width] = fluid-100
settings[theme_font] = font-family-sans-serif-sm
settings[theme_font_size] = font-size-12
settings[sidebar_layout] = sidebars-both-last
settings[sidebar_first_width] = 3
settings[sidebar_last_width] = 4
settings[theme_color] = red

; Inherit Skinr styles from Fusion Core
skinr[options][inherit_skins] = true

; Disable 16 column grid block widths inherited from fusion_core
skinr[grid16-width] = true

; Block Theme Style
skinr[block-style-style][title] = Select block theme style for this block
skinr[block-style-style][type] = select
skinr[block-style-style][features][] = block
skinr[block-style-style][options][1][label] = bottom line
skinr[block-style-style][options][1][class] = bottom-line
skinr[block-style-style][options][2][label] = gray background
skinr[block-style-style][options][2][class] = grey-bg
skinr[block-style-style][options][3][label] = white background
skinr[block-style-style][options][3][class] = white-bg
skinr[block-style-style][options][4][label] = solid background
skinr[block-style-style][options][4][class] = solid-bg
skinr[block-style-style][options][5][label] = gray gradient title background
skinr[block-style-style][options][5][class] = grey-gradient-title-bg
skinr[block-style-style][options][6][label] = white gradient title background
skinr[block-style-style][options][6][class] = white-gradient-title-bg